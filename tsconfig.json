{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src", // This must be specified if "paths" is.
    "paths": {
      "@/api/*": ["api/*"],
      "@/api": ["api"],
      "@/components/*": ["components/*"],
      "@/components": ["components"],
      "@/models/*": ["models/*"],
      "@/models": ["models"],
      "@/hooks/*": ["hooks/*"],
      "@/hooks": ["hooks"],
      "@/pages/*": ["pages/*"],
      "@/pages": ["pages"],
      "@/utils/*": ["utils/*"],
      "@/utils": ["utils"],
      "@/contexts/*": ["contexts/*"],
      "@/contexts": ["contexts"],
      "@/types/*": ["types/*"],
      "@/types": ["types"],
      "@/constants/*": ["constants/*"],
      "@/constants": ["constants"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
